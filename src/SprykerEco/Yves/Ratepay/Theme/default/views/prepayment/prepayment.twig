{% extends template('ratepay-layout', 'Ratepay') %}

{% define data = {
    form: form
} %}

{% block body %}
    {% macro subFormField(context, subFormName ) %}
        <div class="form__field col col--sm-12">
            <label for="{{ context.form.ratepayPrepayment[subFormName].vars.id }}" class="label label--required">
                {{ 'payment.ratepay.' ~ subFormName | trans }}
            </label>
            {{ form_widget(context.form.ratepayPrepayment[subFormName], { 'attr': {'placeholder': 'payment.ratepay.' ~ subFormName | trans } }) }}
            {{ form_errors(context.form.ratepayPrepayment[subFormName]) }}
        </div>
    {% endmacro %}

    <div class="form__fields grid grid--bottom">
        {{ ratepayTemplate.subFormField(data, 'ratepayPrepayment', 'date_of_birth') }}
        {{ ratepayTemplate.subFormField(data, 'ratepayPrepayment', 'phone') }}
    </div>
{% endblock %}
