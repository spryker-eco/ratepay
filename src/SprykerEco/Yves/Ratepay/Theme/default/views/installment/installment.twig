{% extends model('template') %}

{% define data = {
    form: form
} %}

{% block body %}
    {% macro subFormField(context, subFormName ) %}
        <div class="form__field col col--sm-12">
            <label for="{{ context.form.ratepayInstallment[subFormName].vars.id }}" class="label label--required">
                {{ 'payment.ratepay.' ~ subFormName | trans }}
            </label>
            {{ form_widget(context.form.ratepayInstallment[subFormName], { 'attr': {'placeholder': 'payment.ratepay.' ~ subFormName | trans } }) }}
            {{ form_errors(context.form.ratepayInstallment[subFormName]) }}
        </div>
    {% endmacro %}

    <div class="form__fields grid grid--bottom">
        {{ _self.subFormField(data, 'date_of_birth') }}
        {{ _self.subFormField(data, 'phone') }}
        {{ _self.subFormField(data, 'debit_pay_type') }}
        <h6 class="spacing">{{ 'payment.ratepay.bank_account' | trans }}</h6>
        {{ _self.subFormField(data, 'bank_account_iban') }}
        {{ _self.subFormField(data, 'bank_account_bic') }}
        <h6 class="spacing">{{ 'payment.ratepay.installment_calculator' | trans }}</h6>
        {{ _self.subFormField(data, 'installment_calculation_type') }}
        {{ _self.subFormField(data, 'interest_month') }}
        {{ _self.subFormField(data, 'interest_rate') }}
        {{ _self.subFormField(data, 'interest_rate_default') }}
    </div>
{% endblock %}