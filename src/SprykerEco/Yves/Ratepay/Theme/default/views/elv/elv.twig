{% extends model('template') %}

{% define data = {
    form: form
} %}

{% block body %}
    {% macro subFormField(context, subFormName ) %}
        <div class="form__field col col--sm-12">
            <label for="{{ context.form.ratepayElv[subFormName].vars.id }}" class="label label--required">
                {{ 'payment.ratepay.' ~ subFormName | trans }}
            </label>
            {{ form_widget(context.form.ratepayElv[subFormName], { 'attr': {'placeholder': 'payment.ratepay.' ~ subFormName | trans } }) }}
            {{ form_errors(context.form.ratepayElv[subFormName]) }}
        </div>
    {% endmacro %}

    <div class="form__fields grid grid--bottom">
        {{ _self.subFormField(data, 'date_of_birth') }}
        {{ _self.subFormField(data, 'phone') }}
        <h6 class="spacing">{{ 'form.ratepayElv.bank_account' | trans }}</h6>
        {{ _self.subFormField(data, 'bank_account_iban') }}
        {{ _self.subFormField(data, 'bank_account_bic') }}
    </div>
{% endblock %}
